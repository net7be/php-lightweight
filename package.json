{
  "name": "php-lightweight",
  "version": "1.0.0",
  "description": "Structure for a simple PHP project with webpack and single point entry",
  "main": "src/js/app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "dev": "concurrently \"npm run watch\" \"npm run php\" --kill-others -r",
    "php": "php -S localhost:8081 -t public/ public/index_dev.php"
  },
